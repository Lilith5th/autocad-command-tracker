<Window x:Class="AutoCadCommandTracker.Views.ShortcutInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Custom Shortcut"
        Height="200"
        Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        KeyDown="Window_KeyDown">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instruction -->
        <TextBlock Grid.Row="0"
                   TextWrapping="Wrap"
                   FontSize="12">
            <Run Text="Press the key combination you want to use for '"/>
            <Run x:Name="CommandNameRun" FontWeight="Bold"/>
            <Run Text="'"/>
        </TextBlock>

        <!-- Shortcut Display -->
        <Border Grid.Row="2"
                BorderBrush="Gray"
                BorderThickness="1"
                Padding="10"
                Background="WhiteSmoke">
            <TextBlock x:Name="ShortcutTextBlock"
                       Text="Press keys..."
                       FontSize="14"
                       FontWeight="Bold"
                       TextAlignment="Center"/>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="OkButton"
                    Content="OK"
                    Width="75"
                    Height="25"
                    Margin="0,0,10,0"
                    IsDefault="True"
                    IsEnabled="False"
                    Click="OkButton_Click"/>
            <Button Content="Cancel"
                    Width="75"
                    Height="25"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
