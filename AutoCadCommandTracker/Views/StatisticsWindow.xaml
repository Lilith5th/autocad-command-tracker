<Window x:Class="AutoCadCommandTracker.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Command Statistics" Height="500" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <TabControl>
            <!-- Overview Tab -->
            <TabItem Header="Overview">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <GroupBox Header="General Statistics" Margin="0,0,0,10">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Total Commands Executed:" Grid.Row="0" Grid.Column="0"/>
                                <TextBlock Text="{Binding TotalCommands}" Grid.Row="0" Grid.Column="1" FontWeight="Bold"/>

                                <TextBlock Text="Unique Commands Used:" Grid.Row="1" Grid.Column="0"/>
                                <TextBlock Text="{Binding UniqueCommands}" Grid.Row="1" Grid.Column="1" FontWeight="Bold"/>

                                <TextBlock Text="Most Used Command:" Grid.Row="2" Grid.Column="0"/>
                                <TextBlock Text="{Binding MostUsedCommand}" Grid.Row="2" Grid.Column="1" FontWeight="Bold"/>

                                <TextBlock Text="Average Commands/Hour:" Grid.Row="3" Grid.Column="0"/>
                                <TextBlock Text="{Binding AverageCommandsPerHour, StringFormat='{}{0:F1}'}" Grid.Row="3" Grid.Column="1" FontWeight="Bold"/>

                                <TextBlock Text="Peak Usage Hour:" Grid.Row="4" Grid.Column="0"/>
                                <TextBlock Text="{Binding PeakUsageHour, StringFormat='{}{0:00}:00'}" Grid.Row="4" Grid.Column="1" FontWeight="Bold"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Top Command Sequences" Margin="0,0,0,10">
                            <DataGrid ItemsSource="{Binding CommandSequences}" 
                                     AutoGenerateColumns="False"
                                     Height="150"
                                     CanUserAddRows="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Sequence" Binding="{Binding Sequence}" Width="*"/>
                                    <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Commands Tab -->
            <TabItem Header="Commands">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Width="150" SelectedIndex="0">
                            <ComboBoxItem>Usage Count</ComboBoxItem>
                            <ComboBoxItem>Alphabetical</ComboBoxItem>
                            <ComboBoxItem>Last Used</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <DataGrid Grid.Row="1" 
                             ItemsSource="{Binding CommandStatistics}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Command" Binding="{Binding CommandName}" Width="200"/>
                            <DataGridTextColumn Header="Count" Binding="{Binding UsageCount}" Width="80"/>
                            <DataGridTextColumn Header="Last Used" Binding="{Binding LastUsed, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="150"/>
                            <DataGridTextColumn Header="Values Stored" Binding="{Binding ValueCount}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Time Analysis Tab -->
            <TabItem Header="Time Analysis">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <GroupBox Header="Hourly Usage Pattern" Grid.Row="0">
                        <!-- Placeholder for chart control -->
                        <TextBlock Text="[Chart showing hourly usage pattern would go here]" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  Foreground="Gray"/>
                    </GroupBox>

                    <GroupBox Header="Daily Patterns" Grid.Row="1" Margin="0,10,0,0">
                        <DataGrid ItemsSource="{Binding DailyPatterns}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Day" Binding="{Binding Day}" Width="100"/>
                                <DataGridTextColumn Header="Commands" Binding="{Binding CommandCount}" Width="100"/>
                                <DataGridTextColumn Header="Most Used" Binding="{Binding MostUsedCommand}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Export Tab -->
            <TabItem Header="Export">
                <StackPanel Margin="10">
                    <GroupBox Header="Export Options" Margin="0,0,0,10">
                        <StackPanel Margin="10">
                            <CheckBox Content="Include command history" IsChecked="True" Margin="0,0,0,5"/>
                            <CheckBox Content="Include saved values" IsChecked="True" Margin="0,0,0,5"/>
                            <CheckBox Content="Include statistics" IsChecked="True" Margin="0,0,0,5"/>
                            <CheckBox Content="Include time patterns" IsChecked="True" Margin="0,0,0,5"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Export Format">
                        <StackPanel Margin="10">
                            <RadioButton Content="JSON" IsChecked="True" Margin="0,0,0,5"/>
                            <RadioButton Content="CSV" Margin="0,0,0,5"/>
                            <RadioButton Content="XML" Margin="0,0,0,5"/>
                        </StackPanel>
                    </GroupBox>

                    <Button Content="Export Data" 
                           Width="150" 
                           Height="30" 
                           Margin="0,20,0,0"
                           HorizontalAlignment="Center"
                           Click="ExportData_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>