<Window x:Class="_2017_test_binding.Views.MainWindowEnhanced"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:_2017_test_binding.Converters"
        mc:Ignorable="d"
        Title="AutoCAD Command Tracker" 
        Height="{Binding WindowHeight}" 
        Width="{Binding WindowWidth}"
        Left="{Binding WindowLeft}"
        Top="{Binding WindowTop}"
        WindowStartupLocation="Manual"
        ResizeMode="CanResizeWithGrip"
        MouseDown="Window_MouseDown" 
        Topmost="True" 
        AllowsTransparency="True" 
        WindowStyle="None" 
        Opacity="{Binding WindowOpacity}"
        Closing="Window_Closing">
    
    <Window.Resources>
        <!-- Light Theme -->
        <SolidColorBrush x:Key="LightBackground" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="LightForeground" Color="#333333"/>
        <SolidColorBrush x:Key="LightBorder" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="LightHighlight" Color="#0078D4"/>
        
        <!-- Dark Theme -->
        <SolidColorBrush x:Key="DarkBackground" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="DarkForeground" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#555555"/>
        <SolidColorBrush x:Key="DarkHighlight" Color="#40E0D0"/>
        
        <Style x:Key="ThemedWindow" TargetType="Grid">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsDarkTheme}" Value="False">
                    <Setter Property="Background" Value="{StaticResource LightBackground}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ThemedDataGrid" TargetType="DataGrid">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
                    <Setter Property="Foreground" Value="{StaticResource DarkForeground}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
                    <Setter Property="RowBackground" Value="{StaticResource DarkBackground}"/>
                    <Setter Property="AlternatingRowBackground" Value="#3D3D3D"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsDarkTheme}" Value="False">
                    <Setter Property="Background" Value="{StaticResource LightBackground}"/>
                    <Setter Property="Foreground" Value="{StaticResource LightForeground}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource LightBorder}"/>
                    <Setter Property="RowBackground" Value="{StaticResource LightBackground}"/>
                    <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border x:Name="MainBorder" BorderThickness="1" CornerRadius="5">
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                        <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding IsDarkTheme}" Value="False">
                        <Setter Property="BorderBrush" Value="{StaticResource LightBorder}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        
        <Grid Style="{StaticResource ThemedWindow}">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="{Binding WindowTitle}" 
                          VerticalAlignment="Center" 
                          Margin="10,0,0,0"
                          FontWeight="SemiBold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource DarkForeground}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsDarkTheme}" Value="False">
                                    <Setter Property="Foreground" Value="{StaticResource LightForeground}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,5,0">
                    <Button Content="âš™" Width="25" Height="25" 
                            Click="Settings_Click"
                            ToolTip="Settings"
                            Background="Transparent"
                            BorderThickness="0"/>
                    <Button Content="ðŸ“Š" Width="25" Height="25" 
                            Click="Statistics_Click"
                            ToolTip="Statistics"
                            Background="Transparent"
                            BorderThickness="0"/>
                    <Button Content="ðŸ”" Width="25" Height="25" 
                            Click="Search_Click"
                            ToolTip="Search"
                            Background="Transparent"
                            BorderThickness="0"/>
                    <Button Content="âœ•" Width="25" Height="25" 
                            Click="Close_Click"
                            ToolTip="Close"
                            Background="Transparent"
                            BorderThickness="0"
                            FontWeight="Bold"/>
                </StackPanel>
            </Grid>

            <!-- Search/Filter Bar -->
            <Grid Grid.Row="1" Margin="5,0,5,0">
                <TextBox x:Name="SearchBox" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center"
                         Height="22">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border BorderThickness="1" CornerRadius="3">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
                                                            <Setter Property="Background" Value="#3D3D3D"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="False">
                                                            <Setter Property="BorderBrush" Value="{StaticResource LightBorder}"/>
                                                            <Setter Property="Background" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="5,0,20,0"/>
                                                <TextBlock Text="Search..." 
                                                          Margin="5,0,0,0"
                                                          VerticalAlignment="Center"
                                                          Foreground="Gray"
                                                          IsHitTestVisible="False">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Grid>

            <!-- Main Data Grid -->
            <DataGrid x:Name="MainDataGrid" 
                      Grid.Row="2"
                      Margin="5"
                      Style="{StaticResource ThemedDataGrid}"
                      AutoGenerateColumns="False"
                      CanUserResizeColumns="True"
                      CanUserReorderColumns="True"
                      CanUserSortColumns="True"
                      GridLinesVisibility="None"
                      ItemsSource="{Binding FilteredDisplayData}"
                      SelectedItem="{Binding SelectedItem}"
                      MouseDoubleClick="DataGrid_MouseDoubleClick">
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" 
                                        Binding="{Binding Index}" 
                                        Width="30"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Command/Value" 
                                        Binding="{Binding DisplayText}" 
                                        Width="*"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Shortcut" 
                                        Binding="{Binding Shortcut}" 
                                        Width="60"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Count" 
                                        Binding="{Binding UsageCount}" 
                                        Width="50"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Type" 
                                        Binding="{Binding ItemType}" 
                                        Width="60"
                                        IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Status Bar -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="{Binding StatusText}" 
                          VerticalAlignment="Center"
                          Margin="5,0,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource DarkForeground}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsDarkTheme}" Value="False">
                                    <Setter Property="Foreground" Value="{StaticResource LightForeground}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                
                <TextBlock Grid.Column="1" 
                          Text="{Binding ProfileName}" 
                          VerticalAlignment="Center"
                          Margin="0,0,5,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource DarkForeground}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsDarkTheme}" Value="False">
                                    <Setter Property="Foreground" Value="{StaticResource LightForeground}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Grid>
    </Border>
</Window>